<form class="validate form form--subscribe" style="margin: 20px auto;width: 80%;border: 1px solid red;" action="{{ settings.subscribe_form_url }}" name="mc-embedded-subscribe-form" target="_blank" method="post" novalidate>
    <div id="mc_embed_signup_scroll">
    <input class="email form__field" id="mce-EMAIL" style="border-radius:0;" type="email" value name="EMAIL"  placeholder="Your e-mail" required>
      <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
    <div style="position: absolute; left: -5000px;">
      <input type="text" name="b_579323687b7e07d00f80f3245_6afa2ff3f4" tabindex="-1" value="">
    </div>
    <div class="clear">
      <button class="btn btn--default btn--submit" style="background: black;color: white;top: -1px;right: -1px;padding: 17px 10px;border-radius:0;" type="submit" value="{{ 'layout.general.subscribe_button' | t }}" name="subscribe" id="mc-embedded-subscribe" class="btn btn-special">JOIN</button>
    </div>
  </div><!--end mc_embed_signup_scroll-->
</form>