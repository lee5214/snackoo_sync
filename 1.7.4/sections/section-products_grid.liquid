<!-- Swiper -->
<style>
	.swiper-container{
		max-width: 1000px;
	}
	.swiper-slide > .product > .product__info > .product__title{
		font-size: 12px;
		min-height: 50px;
	}

</style>


{% assign home_sec_name = 'New Arrivels' %}
{% include 'homepage-section-subtitle' with home_sec_name %}
<div class="carousel__navigation" style="width: auto;position: absolute; left:calc(100vw / 2 - 500px);">
	<!-- Add Arrows -->
	<button class="homepage-swiper-btn-prev carousel-button-prev">
		<svg viewBox="0 0 18 18" data-reactid=".2akuon0ef4.1.2.0.0.1.0:$experiences_11.0.1.3.0.0.0.0"><path d="M13.703 16.293a1 1 0 1 1-1.415 1.414l-7.995-8a1 1 0 0 1 0-1.414l7.995-8a1 1 0 1 1 1.415 1.414L6.413 9l7.29 7.293z" data-reactid=".2akuon0ef4.1.2.0.0.1.0:$experiences_11.0.1.3.0.0.0.0.0"></path></svg>

	</button>
</div>
<div class="carousel__navigation" style="width: auto;position: absolute; right:calc(100vw / 2 - 500px);">
	<!-- Add Arrows -->
	<button class="homepage-swiper-btn-next carousel-button-next">
		<svg viewBox="0 0 18 18" style="float:left" data-reactid=".2cplo9u29s0.1.2.0.0.1.0:$experiences_5.0.1.3.2.0.0.0"><path d="M4.293 1.707A1 1 0 1 1 5.708.293l7.995 8a1 1 0 0 1 0 1.414l-7.995 8a1 1 0 1 1-1.415-1.414L11.583 9l-7.29-7.293z" data-reactid=".2cplo9u29s0.1.2.0.0.1.0:$experiences_5.0.1.3.2.0.0.0.0"></path></svg>
	</button>
	<!-- Add Pagination -->
</div>
<div class="swiper-container carousel carousel-section-product-grid" data-autoplay="{{ autoplay }}">
	<div class="swiper-wrapper">
		{% for product in collections[section.settings.section-products_grid].products %}
			<div class="swiper-slide" data-img-bg="{% if product.featured_image.size > 0 %}{{ product.featured_image | img_url: 'small'}}{% else %}{{ 'img_no_image.jpg' | asset_url }}{% endif %}">
				{% include 'product-item-grid-2rows' %}
			</div>
		{% endfor %}

	</div>

{% comment %}
	<div class="carousel__navigation">
		<!-- Add Arrows -->
		<div class="homepage-swiper-btn-next1 carousel-button-next">
			<span class="icon icon--arrow-right"></span>
		</div>
		<!-- Add Pagination -->
		<div class="swiper-active-slide"></div>

		<div class="homepage-swiper-btn-prev1 carousel-button-prev">
			<span class="icon icon--arrow-left"></span>
		</div>
	</div>
{% endcomment %}

</div>

{% schema %}
{
"name": "Section Product Grid",
"settings": [
{
"type": "collection",
"id": "section-products_grid",
"label": "Section Product Grid"
},
{
"type": "text",
"id": "autoplay",
"label": "Time",
"info": "If this parameter is not specified, autoplay will be disabled. The value should be in milliseconds"
},
{
"type": "text",
"id": "sec_subtitle",
"label": "title",
"info": "input a name for this sec"
}
],
"presets": [
{
"name": "Section Product Grid",
"category": "Collections"
}
]
}
{% endschema %}


